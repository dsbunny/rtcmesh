{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"declaration": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"test"
	]
}
